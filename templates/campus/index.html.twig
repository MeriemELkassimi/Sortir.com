{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Campus{% endblock %}

{% block body %}
    <h4>Liste des campus</h4>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for campus in campuses %}
            <tr>
                <td>{{ campus.id }}</td>
                <td>{{ campus.nom }}</td>
                <td class="lienTableau">
                    <a href="{{ path('app_campus_show', {'id': campus.id}) }}">Afficher</a>
                    <a href="{{ path('app_campus_edit', {'id': campus.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de campus enregistré!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_campus_new') }}"><button class="btnAppPerso">
            Créer
        </button></a>
{% endblock %}
