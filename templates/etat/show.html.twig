{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Etat{% endblock %}

{% block body %}
    <h4>Etat</h4>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ etat.id }}</td>
            </tr>
            <tr>
                <th>Libéllé</th>
                <td>{{ etat.libelle }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_etat_index') }}"><button class="btnAppPerso">
            Retour à la liste
        </button></a>

    <div>
        <a href="{{ path('app_etat_edit', {'id': etat.id}) }}"><button class="btnAppPerso">
            Modifier
        </button></a>
    </div>
    {{ include('etat/_delete_form.html.twig') }}
{% endblock %}
