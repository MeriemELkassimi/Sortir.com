{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Etats{% endblock %}

{% block body %}
    <h1>Liste des états</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libéllé</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etat in etats %}
            <tr>
                <td>{{ etat.id }}</td>
                <td>{{ etat.libelle }}</td>
                <td>
                    <a href="{{ path('app_etat_show', {'id': etat.id}) }}">show</a>
                    <a href="{{ path('app_etat_edit', {'id': etat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas d'état enregistré!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_etat_new') }}">Créer</a>
{% endblock %}
