{% extends 'base.html.twig' %}

{% block title %}Participant{% endblock %}

{% block body %}
    <h1>Participant</h1>

    <table class="table">
        <tbody>
            <h2>
                {{ participant.pseudo }}
            </h2>
            <tr>
                <th>Nom</th>
                <td>{{ participant.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ participant.prenom }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ participant.telephone }}</td>
            </tr>

            <tr>
                <th>Mail</th>
                <td>{{ participant.email }}</td>
            </tr>

            <tr>
                <th>Campus</th>
                <td>{{ participant.campus.nom }}</td>
            </tr>

            {% if participant.image is not empty %}
                <div>
                    <img src="{{asset(participant.image) }}" alt="image_profil">

                </div>
            {% endif %}

        </tbody>
    </table>

    <a href="{{ path('app_participant_index') }}">back to list</a>

    <a href="{{ path('app_participant_edit', {'id': participant.id}) }}">edit</a>

    {{ include('participant/_delete_form.html.twig') }}
{% endblock %}
