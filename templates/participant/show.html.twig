{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Participant{% endblock %}

{% block body %}
    <h4>Participant</h4>

    <table class="table table-striped table-bordered">
        <tbody>
            <h2>
                {{ participant.pseudo }}
            </h2>
            <tr>
                <th>Nom</th>
                <td>{{ participant.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ participant.prenom }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ participant.telephone }}</td>
            </tr>

            <tr>
                <th>Mail</th>
                <td>{{ participant.email }}</td>
            </tr>

            <tr>
                <th>Campus</th>
                <td>{{ participant.campus.nom }}</td>
            </tr>

            {% if participant.image is not empty %}
                <div>
                    <img src="{{asset(participant.image) }}" alt="image_profil">
                </div>
            {% endif %}

        </tbody>
    </table>
    {% if  is_granted('ROLE_ADMIN')%}
        <a href="{{ path('app_participant_index') }}"><button class="btnAppPerso">
                Retour à la liste
            </button></a>
     {%else%}
        <a href="{{ path('app_sortie_index') }}"><button class="btnAppPerso">
                Retour à la liste
            </button></a>
    {% endif %}

    <div>
        <a href="{{ path('app_participant_edit', {'id': participant.id}) }}"><button class="btnAppPerso">
            Modifier
        </button></a>
    </div>

    {{ include('participant/_delete_form.html.twig') }}
{% endblock %}
