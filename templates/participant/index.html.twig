{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Participants {% endblock %}

{% block body %}
    <h4>Liste des participants</h4>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Téléphone</th>
                <th>Pseudo</th>
                <th>Mail</th>
                <!-- <th>Mot de passe</th>   -->
                <th>Roles</th>
                <th>Actif</th>
                <!--<th>Image</th>    -->
                <th>Campus</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.id }}</td>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.telephone }}</td>
                <td>{{ participant.pseudo }}</td>
                <td>{{ participant.email }}</td>
                <!--  <td>{{ participant.password }}</td>   -->
                <td>{{ participant.roles ? participant.roles|json_encode : '' }}</td>
                <!--  <td>{{ participant.isActif ? 'Yes' : 'No' }}</td>   -->

                <td class="icone-actif">
                {% if (participant.isActif == 1) %}
                    <img src="{{ asset('img/green-ok.png') }}" alt="actif">
                {% else %}
                    <img src="{{ asset('img/cross-check.webp') }}" alt="inactif">
                {% endif %}
                </td>

                <!--  <td>{{ participant.image }}</td> -->

                <td>
                   {% if (participant.campus) %}
                        {{ participant.campus.nom }}
                    {% endif %}
                </td>
                <td class="lienTableau">
                    <a href="{{ path('app_participant_show', {'id': participant.id}) }}">Afficher</a>
                    <a href="{{ path('app_participant_edit', {'id': participant.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">Pas de participant enregistré!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_register') }}"><button class="btnAppPerso">Créer</button></a>
{% endblock %}
