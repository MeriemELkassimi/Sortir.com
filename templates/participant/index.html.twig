{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Participants {% endblock %}

{% block body %}
    <h1>Liste des participants</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Téléphone</th>
                <th>Pseudo</th>
                <th>Mail</th>
                <th>Mot de passe</th>
                <th>Roles</th>
                <th>Actif</th>
                <th>Image</th>
                <th>Campus</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.id }}</td>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.telephone }}</td>
                <td>{{ participant.pseudo }}</td>
                <td>{{ participant.email }}</td>
                <td>{{ participant.password }}</td>
                <td>{{ participant.roles ? participant.roles|json_encode : '' }}</td>
                <td>{{ participant.isActif ? 'Yes' : 'No' }}</td>
                <td>{{ participant.image }}</td>
                <td>{{ participant.campus.nom }}</td>
                <td>
                    <a href="{{ path('app_participant_show', {'id': participant.id}) }}">show</a>
                    <a href="{{ path('app_participant_edit', {'id': participant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">Pas de participant enregistré!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_participant_new') }}">Créer</a>
{% endblock %}
