{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Organisateur{% endblock %}

{% block body %}
    <h4>Profil</h4>

    <table class="table table-striped table-bordered">
        <tbody>
            <h2>
                {{ participant.pseudo }}
            </h2>
            <tr>
                <th>Nom</th>
                <td>{{ participant.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ participant.prenom }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ participant.telephone }}</td>
            </tr>

            <tr>
                <th>Mail</th>
                <td>{{ participant.email }}</td>
            </tr>

            <tr>
                <th>Campus</th>
                <td>
                    {% if (participant.campus) %}
                        {{ participant.campus.nom }}
                    {% endif %}
                </td>

            </tr>

            {% if participant.image is not empty %}
                <div>
                    <img src="{{asset(participant.image) }}" alt="image_profil">
                </div>
            {% endif %}

        </tbody>
    </table>

    <a href="{{ path('app_sortie_index') }}"><button class="btnAppPerso">Retour à l'accueil</button></a>


{% endblock %}
