{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Sortie{% endblock %}

{% block body %}
    <h4>Sortie</h4>

    <table class="table table-striped table-bordered">
        <tbody class="col1-sortie-show">
            <tr>
                <th>Nom</th>
                <td>{{ sortie.nom }}</td>
            </tr>
            <tr>
                <th>Campus</th>
                <td>{{ sortie.campus.nom }}</td>
            </tr>
            <tr>
                <th>Date et heure de début</th>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('d/m/Y  -  H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Date limite d'inscription</th>
                <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ sortie.duree }} minutes</td>
            </tr>
            <tr>
                <th>Nombre de places</th>
                <td>{{ sortie.nbInscriptionsMax }}</td>
            </tr>
            <tr>
                <th>Infos sortie</th>
                <td>{{ sortie.infosSortie }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ sortie.lieu.nom }}, {{ sortie.lieu.rue }} à {{ sortie.lieu.ville.nom }} ({{ sortie.lieu.ville.codePostal }})</td>
            </tr>
            <tr>
                <th>Coordonnées GPS</th>
                <td>latitude : {{ sortie.lieu.latitude | number_format(2, ',', '.')}}°   ||    longitude : {{ sortie.lieu.longitude | number_format(2, ',', '.')}}°</td>
            </tr>

            {% if (sortie.etat.libelle == "Annulée") %}
                <tr>
                    <th>Motif annulation</th>
                    <td>{{ sortie.annulation }}</td>
                </tr>
            {% endif %}

        </tbody>
    </table>

    <h5>Liste des participants inscrits</h5>

    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Pseudo</th>
            <th>Nom</th>
        </tr>
        </thead>
        <tbody>
        {% for participant in sortie.participants %}
            <tr>
                <td>{{ participant.pseudo }}</td>
                <td class="lienTableau"><a href="{{ path('app_participant_organisateurshow', {id: participant.id}) }}" >{{ participant.prenom }} {{ participant.nom }}</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">Pas de participant enregistré!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sortie_index') }}"><button class="btnAppPerso">Retour à la liste</button></a>

    {% if is_granted('ROLE_ADMIN')%}
        <a href="{{ path('app_sortie_edit', {'id': sortie.id}) }}"><button class="btnAppPerso">Modifier</button></a>
        {{ include('sortie/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
