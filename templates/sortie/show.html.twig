{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Sortie{% endblock %}

{% block body %}
    <h4>Sortie</h4>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sortie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ sortie.nom }}</td>
            </tr>
            <tr>
                <th>Date et heure de début</th>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('d/m/Y  -  H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ sortie.duree }}</td>
            </tr>
            <tr>
                <th>Date limite d'inscription</th>
                <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre d'inscriptions maximum</th>
                <td>{{ sortie.nbInscriptionsMax }}</td>
            </tr>
            <tr>
                <th>Infos sortie</th>
                <td>{{ sortie.infosSortie }}</td>
            </tr>
            <tr>
                <th>Annulation</th>
                <td>{{ sortie.annulation }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('app_sortie_index') }}"><button class="btnAppPerso">Retour à la liste
        </button></a>

    <div>
        <a href="{{ path('app_sortie_edit', {'id': sortie.id}) }}"><button class="btnAppPerso">
                Modifier
            </button></a>
    </div>
    {{ include('sortie/_delete_form.html.twig') }}
{% endblock %}
