{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Sortie{% endblock %}

{% block body %}
    <h4>Sortie</h4>

    <table class="table table-striped table-bordered">
        <tbody class="col1-sortie-show">
            <tr>
                <th>Nom</th>
                <td>{{ sortie.nom }}</td>
            </tr>
            <tr>
                <th>Date et heure de début</th>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('d/m/Y  -  H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Date limite d'inscription</th>
                <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ sortie.duree }} minutes</td>
            </tr>
            <tr>
                <th>Nombre de places</th>
                <td>{{ sortie.nbInscriptionsMax }}</td>
            </tr>
            <tr>
                <th>Infos sortie</th>
                <td>{{ sortie.infosSortie }}</td>
            </tr>


        </tbody>
    </table>

    <h5>Liste des participants inscrits</h5>

    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Pseudo</th>
            <th>Nom</th>
        </tr>
        </thead>
        <tbody>
        {% for participant in sortie.participants %}
            <tr>
                <td>{{ participant.pseudo }}</td>
                <td>{{ participant.prenom }} {{ participant.nom }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">Pas de participant enregistré!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sortie_index') }}"><button class="btnAppPerso">Retour à la liste</button></a>

    <a href="{{ path('app_sortie_edit', {'id': sortie.id}) }}"><button class="btnAppPerso">Modifier</button></a>

    {{ include('sortie/_delete_form.html.twig') }}
{% endblock %}
